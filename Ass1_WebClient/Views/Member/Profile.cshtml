@model BusinessObjects.Member

@{
    ViewData["Title"] = "Profile";
    String email = Context.Session.GetString("EMAIL");
}

<h1>My profile</h1>


<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>

    @if (email != null)
    {
        <a class="btn btn-warning" asp-action="EditProfile">Edit</a>
    }
    else
    {
        <a class="btn btn-warning" asp-action="Edit">Edit</a>
    }
</div>
