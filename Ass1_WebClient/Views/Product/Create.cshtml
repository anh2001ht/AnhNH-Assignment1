@model DataTransfer.ProductRequest;

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="ProductName" class="control-label mb-1">Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UnitPrice" class="control-label mb-1">Unit price</label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UnitsInStock" class="control-label mb-1">Units in stock</label>
                <input asp-for="UnitsInStock" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Weight" class="control-label mb-1">Weight</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CategoryID" class="control-label mb-1">Category</label>
                <select asp-for="CategoryID" class ="form-control">
                    @foreach (var std in (List<BusinessObjects.Category>)ViewData["Categories"])
                    {
                        <option value="@std.CategoryID">@std.CategoryName</option>
                    }
                </select>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
